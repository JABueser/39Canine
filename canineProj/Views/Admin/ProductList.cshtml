@model IEnumerable<Product>
@{
    ViewBag.Title = "All Products";
    Layout = "_Layout";
}
<div class="col-md-9" style="margin:0 auto; background:rgba(100, 100, 100, 0.95); border-radius:5px">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            @*<th class="text-right">ID</th>*@
            <th id="whitetext">Name</th>
            <th id="whitetext" class="text-right">Price</th>
            <th id="whitetext" class="text-center">Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @*<td class="text-right">@item.ProductID</td>*@
                <td id="whitetext">@item.Name</td>
                <td id="whitetext" class="text-right">@item.Price.ToString("c")</td>
                <td id="whitetext" class="text-center">
                    <form asp-action="DeleteProduct" method="post">
                        <a asp-action="EditProduct" asp-controller="Admin" class="btn btn-sm btn-warning"
                           asp-route-productId="@item.ProductID">
                            Edit
                        </a>
                        <input type="hidden" name="ProductID" value="@item.ProductID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="text-center">
        <a asp-action="CreateProduct" class="btn btn-primary">Add Product</a>
</div>
