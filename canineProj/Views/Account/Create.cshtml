                            <div class="col-sm-offset-2">
                                <button class="btn btn-primary find-out" type="submit" data-aos="fade" data-aos-duration="450" data-aos-delay="150" data-aos-once="true">CREATE</button>
                                <button class="btn btn-outline-warning find-out" type="reset" data-aos="fade" data-aos-duration="450" data-aos-delay="150" data-aos-once="true">Reset</button>
                                <a asp-action="Index" class="btn btn-outline-danger find-out" data-aos="fade" data-aos-duration="450" data-aos-delay="150" data-aos-once="true">Cancel</a>
                            </div>
                        </div>


                    </form>
                </div>
