@model canineProj.Models.ViewModels.CartIndexViewModel
<div id="div-bg">
    <section class="d-flex flex-column justify-content-between" id="herovh">
        <div></div>
        <div class="d-inline-flex flex-column col col-md-9" data-aos="fade-down" data-aos-duration="500" data-aos-once="true" style="margin:0 auto;">
            <h2 id="cart-table" style="padding-left:40px; padding-top:10px; padding-bottom:10px;">Your Cart:</h2>
            <div class="table-responsive" id="cart-table">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">Quantity</th>
                            <th>Item</th>
                            <th class="text-right">Price</th>
                            <th class="text-right">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.Cart.Lines)
                        {
                            <tr>
                                <td class="text-center">@line.Quantity</td>
                                <td class="text-left">@line.Product.Name</td>
                                <td class="text-right">@line.Product.Price.ToString("c")</td>
                                <td class="text-right">
                                    @((line.Quantity * line.Product.Price).ToString("c"))
                                </td>
                                <td>
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="ProductID" value="@line.Product.ProductID" />
                                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                        <button type="submit" class="btn btn-sm btn-danger ">
                                            Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right">Total:</td>
                            <td class="text-right">
                                @Model.Cart.ComputeTotalValue().ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="text-center">
                <form>
                    <a asp-action="List" asp-controller="Product" data-aos="fade" data-aos-duration="450" data-aos-delay="400" class="btn btn-primary find-outcart">Continue Shopping</a>
                    <button asp-action="Checkout" asp-controller="Order" data-aos="fade" data-aos-duration="450" data-aos-delay="550" data-aos-once="true" class="btn btn-primary find-outcart">Checkout</button>
                </form>
            </div>
        </div>
        <div></div>
    </section>
</div>