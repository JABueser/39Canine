@model canineProj.Models.Order
<div id="div-bgCheckout">
    <div id="divspace"></div>
    <section>
        <div id="flexcontainer">
            <form asp-action="Checkout" method="post" id="shippingform" class="col col-md-9">
                <div asp-validation-summary="All" class="text-danger"></div>
                <h1 class="mission"><br>Checkout:</h1>
                <h3 class="subtitles">Ship To:</h3>
                <div class="form-group">
                    <label id="productparagraph">Name:</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label id="productparagraph">Address:</label>
                    <input asp-for="Line1" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">Line 2:</label>
                    <input asp-for="Line2" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">City:</label>
                    <input asp-for="City" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">State:</label>
                    <input asp-for="State" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">Zip:</label>
                    <input asp-for="Zip" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">Country:</label>
                    <input asp-for="Country" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">Name on Credit Cart:</label>
                    <input asp-for="CreditName" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">Card Number (Numeric Only):</label>
                    <input asp-for="CreditCard" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">Expiration Date (Numeric Only mm/yy):</label>
                    <input asp-for="ExpDate" class="form-control">
                </div>
                <div class="form-group">
                    <label id="productparagraph">Security Code:</label>
                    <input asp-for="CIV" class="form-control">
                </div>
                <div class="checkbox">
                    <label id="productparagraph">
                        <input asp-for="GiftWrap" /> Gift wrap these items
                    </label>
                </div>
                <div class="text-center">
                    <input class="btn btn-primary" type="submit" value="Complete Order" asp-route-orderNumber="@Model.OrderID" />
                </div>
            </form>
        </div>
    </section>
</div>
